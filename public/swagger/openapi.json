    "paths": {
        "/api/Users/RegisterUser": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "928510f68a54af5edee603bd0170d4bc",
                "requestBody": {
                    "description": "Create new user account",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "firstName": {
                                        "type": "string",
                                        "example": "string"
                                    },
                                    "lastName": {
                                        "type": "string",
                                        "example": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "string"
                                    },
                                    "phoneNumber": {
                                        "type": "string",
                                        "example": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/Users/LoginUser": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "96664ea0d99e58f693c3752e188f345f",
                "requestBody": {
                    "description": "Enter user email and password",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "example@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "Your password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "404": {
                        "description": "Not found"
                    },
                    "401": {
                        "description": "Wrong credentials"
                    }
                }
            }
        },
        "/api/Users/SendPasswordResetEmail": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "472049dd1c27800522e32238265930eb",
                "requestBody": {
                    "description": "Provide user email",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "example@email.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "/api/Users/ActivateUserAccount/{token}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "description": "Do not run this route from swagger since it's supposed to redirect user to specific page. <br/> Swagger will return `NetworkError` cause redirection can not happen",
                "operationId": "cba6d859cd163357d9b368b7d6bc2663",
                "parameters": [
                    {
                        "name": "token",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An example resource"
                    }
                }
            }
        },
        "/api/Users/ResetPassword": {
            "post": {
                "tags": [
                    "Users"
                ],
                "operationId": "02e941c7e9cf89f125f6c0ca88f47358",
                "requestBody": {
                    "description": "This endpoint servers as a option for loged user to reset password",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "hash": {
                                        "type": "string",
                                        "example": "string"
                                    },
                                    "newPassword": {
                                        "type": "string",
                                        "example": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "description": "Enter the Bearer Authorization string as following: `Bearer Generated-JWT-Token`",
                "name": "Authorization",
                "in": "header",
                "flows": {
                    "password": {
                        "tokenUrl": "/oauth/token",
                        "refreshUrl": "/oauth/token/refresh",
                        "scopes": {}
                    }
                },
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}