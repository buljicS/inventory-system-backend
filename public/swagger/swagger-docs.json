{
    "openapi": "3.0.0",
    "info": {
        "title": "Inventory managment system API",
        "description": "Inventory web based system for tracking items and stuff in company",
        "version": "1.0"
    },
    "paths": {
        "/inventory-system-backend/api/loginUser": {
            "post": {
                "tags": [
                    "Workers"
                ],
                "summary": "User login",
                "operationId": "47de759960e4c6d80e5f92577ee75e5a",
                "requestBody": {
                    "description": "Enter user email and password",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "example@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "Your password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User found"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "401": {
                        "description": "Wrong creditentials"
                    }
                }
            }
        }
    }
}